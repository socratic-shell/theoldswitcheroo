{
  "name": "theoldswitcheroo-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for taskspace management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/bundle.cjs --external:fsevents",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "package": "npm run bundle && pkg dist/bundle.cjs --targets node18-macos-x64,node18-linux-x64,node18-win-x64 --out-path ./bin"
  },
  "bin": {
    "theoldswitcheroo-mcp": "./dist/index.js"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "targets": [
      "node18-macos-x64",
      "node18-linux-x64",
      "node18-win-x64"
    ],
    "outputPath": "bin"
  },
  "keywords": [
    "mcp",
    "taskspace",
    "vscode"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.9",
    "jest": "^30.1.1",
    "pkg": "^5.8.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
